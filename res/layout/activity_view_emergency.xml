<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:background="#cedcd6"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.caroline.safehome.ViewEmergency">
        <ImageButton
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"

            android:onClick="onClick"

            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/EnterDetailsButton"
            android:layout_alignEnd="@+id/EnterDetailsButton" />





        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:clickable="false"

            android:focusable="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:focusableInTouchMode="false"
            android:layout_weight="7.39"
            android:layout_gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/EnterDetailsButton"
            android:layout_marginTop="59dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ems="10"
            android:id="@+id/phoneTextView"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:focusable="false"
            android:focusableInTouchMode="false"

            android:layout_gravity="center_vertical"
            android:layout_below="@+id/nameTextView"
            android:layout_toRightOf="@+id/EnterDetailsButton"
            android:layout_toEndOf="@+id/EnterDetailsButton" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextView"


            android:textAppearance="?android:attr/textAppearanceMedium"

            android:layout_weight="1.55"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton" />

        <ImageButton
            android:layout_width="65dp"
            android:layout_height="75dp"
            android:src="@drawable/phone"
            android:id="@+id/EnterDetailsButton"
            android:onClick="onClick"
            android:layout_gravity="bottom"
            android:layout_marginLeft="51dp"
            android:layout_marginStart="51dp"
            android:layout_marginTop="81dp"
            android:layout_below="@+id/emailTextView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/me"
            android:id="@+id/message"
            android:onClick="message"
            android:layout_gravity="bottom"
            android:layout_alignTop="@+id/EnterDetailsButton"
            android:layout_alignRight="@+id/phoneTextView"
            android:layout_alignEnd="@+id/phoneTextView"
            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp" />


    </RelativeLayout>




<ListView
android:id="@+id/navList"
android:layout_width="200dp"
android:layout_height="match_parent"
android:layout_gravity="left|start"
android:background="#b9b9b6"
android:divider="#FFFFFF"
android:dividerHeight="0.5px"/>
    </android.support.v4.widget.DrawerLayout>
