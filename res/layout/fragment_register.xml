<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameTextView"
        android:hint="Name"

        android:layout_above="@+id/emailTextView"
        android:layout_alignLeft="@+id/HomeTextView"
        android:layout_alignStart="@+id/HomeTextView"
        android:layout_alignRight="@+id/HomeTextView"
        android:layout_alignEnd="@+id/HomeTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextView"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/HomeTextView"
        android:layout_alignLeft="@+id/HomeTextView"
        android:layout_alignStart="@+id/HomeTextView"
        android:layout_alignRight="@+id/nameTextView"
        android:layout_alignEnd="@+id/nameTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress|textCapWords|textNoSuggestions"
        android:ems="10"
        android:id="@+id/HomeTextView"
        android:hint="Home Address"
        android:layout_above="@+id/phoneTextView"
        android:layout_alignLeft="@+id/phoneTextView"
        android:layout_alignStart="@+id/phoneTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneTextView"
        android:hint="Phone"
        android:layout_above="@+id/PasswordTextView"
        android:layout_alignLeft="@+id/PasswordTextView"
        android:layout_alignStart="@+id/PasswordTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordTextView"
        android:hint="Password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/EnterDetailsButton"
        android:onClick="onClick"
        android:background="#040304"
        android:textColor="#fcfcfc"
        android:layout_below="@+id/PasswordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />



</RelativeLayout>

